{
  "manifest_version": 3,
  "name": "JARVIS Gmail Assistant",
  "version": "1.0.0",
  "description": "AI-powered email assistant with Iron Man Jarvis-style interface",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JARVIS Gmail Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.js"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}
